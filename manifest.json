{
  "manifest_version": 3,
  "name": "OWASP Live Detector",
  "version": "1.0.0",
  "description": "Live frontend security analysis for OWASP-aligned misconfigurations using runtime headers, DOM, and network signals.",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
